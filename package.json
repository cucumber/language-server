{
  "name": "@cucumber/language-server",
  "version": "0.3.1",
  "description": "Cucumber Language Server",
  "type": "module",
  "main": "dist/cjs/src/index.js",
  "types": "dist/cjs/src/index.d.ts",
  "files": [
    "dist/cjs",
    "dist/esm",
    "*.wasm"
  ],
  "module": "dist/esm/src/index.js",
  "jsnext:main": "dist/esm/src/index.js",
  "exports": {
    ".": {
      "import": "./dist/esm/src/index.js",
      "require": "./dist/cjs/src/index.js"
    }
  },
  "bin": {
    "cucumber-language-server": "bin/cucumber-language-server.js"
  },
  "scripts": {
    "build:cjs": "tsc --build tsconfig.build-cjs.json && cp package.cjs.json dist/cjs/package.json",
    "build:esm": "tsc --build tsconfig.build-esm.json",
    "build": "npm run build:cjs && npm run build:esm",
    "test": "mocha && npm run test:cjs",
    "test:cjs": "npm run build:cjs && mocha --no-config --recursive dist/cjs/test",
    "prepublishOnly": "npm run build",
    "eslint-fix": "eslint --ext ts,tsx --max-warnings 0 --fix src test",
    "eslint": "eslint --ext ts,tsx --max-warnings 0 src test",
    "upgrade": "npm-check-updates --upgrade",
    "build-java-wasm": "npx tree-sitter build-wasm node_modules/tree-sitter-java",
    "build-typescript-wasm": "npx tree-sitter build-wasm node_modules/tree-sitter-typescript/typescript",
    "prepare": "husky install",
    "pretty-quick-staged": "pretty-quick --staged"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/cucumber/language-server.git"
  },
  "keywords": [
    "cucumber",
    "lsp"
  ],
  "author": "Cucumber Limited <cukes@googlegroups.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cucumber/language-server/issues"
  },
  "homepage": "https://github.com/cucumber/language-server#readme",
  "devDependencies": {
    "@cucumber/cucumber": "7.3.1",
    "@types/mocha": "9.0.0",
    "@types/node": "16.11.6",
    "@typescript-eslint/eslint-plugin": "5.1.0",
    "@typescript-eslint/parser": "5.1.0",
    "eslint": "8.2.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.25.2",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "husky": "7.0.4",
    "mocha": "9.1.3",
    "npm-check-updates": "11.8.5",
    "prettier": "2.4.1",
    "pretty-quick": "3.1.1",
    "ts-node": "10.3.0",
    "typescript": "4.4.4"
  },
  "dependencies": {
    "@cucumber/cucumber-expressions": "^14.0.0",
    "@cucumber/gherkin-utils": "^7.0.0",
    "@cucumber/language-service": "^0.10.0",
    "@cucumber/messages": "^17.1.1",
    "@cucumber/message-streams": "^3.0.0",
    "@cucumber/suggest": "^0.0.6",
    "source-map-support": "0.5.20",
    "tree-sitter-cli": "0.20.0",
    "tree-sitter-java": "0.19.1",
    "tree-sitter-typescript": "0.19.0",
    "vscode-languageserver": "7.0.0",
    "vscode-languageserver-textdocument": "1.0.2",
    "web-tree-sitter": "0.19.4"
  }
}
